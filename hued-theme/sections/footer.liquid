{{ 'section-footer.min.css' | asset_url | stylesheet_tag }}

{% assign footer = false %}
{% if section.blocks.size > 0 %}
  {% assign footer = true %}
{% endif %}

<footer class="footer-redesign" data-footer-wrapper data-section-id="{{ section.id }}" data-section-type="footer">

  {% comment %} HUED REDESIGN: Main Footer Content {% endcomment %}
  <div class="footer-redesign__main">
    <div class="footer-redesign__container">

      {% comment %} Logo removed - header is now sticky so logo stays visible {% endcomment %}

      {% comment %} Content wrapper for columns + divider + signup {% endcomment %}
      <div class="footer-redesign__content">

        {% comment %} Left side: Link columns {% endcomment %}
        <div class="footer-redesign__columns">
          {% for block in section.blocks %}
            {% if block.type == 'footer-menu' %}
              {% assign menu = linklists[block.settings.menu] %}
              <div class="footer-redesign__column" {{ block.shopify_attributes }}>
                {% if block.settings.menu-title != blank %}
                  <h4 class="footer-redesign__heading">{{ block.settings.menu-title }}</h4>
                {% endif %}
                {% if menu.links.size > 0 %}
                  <ul class="footer-redesign__links">
                    {% for link in menu.links %}
                      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}

          {% comment %} Contact Us Column {% endcomment %}
          <div class="footer-redesign__column footer-redesign__column--contact">
            <h4 class="footer-redesign__heading">Contact Us</h4>
            <a href="mailto:hello@huedbracelets.com" class="footer-redesign__contact-email">hello@huedbracelets.com</a>
          </div>
        </div>

        {% comment %} Vertical Divider {% endcomment %}
        <div class="footer-redesign__divider"></div>

        {% comment %} Right side: Newsletter + Social {% endcomment %}
        <div class="footer-redesign__signup">
          <h4 class="footer-redesign__heading">Join our newsletter</h4>

          {% comment %} Email Form {% endcomment %}
          <div class="footer-redesign__form">
            {% form 'customer', class: 'footer-email-form' %}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="footer-redesign__input-wrapper">
                <input
                  type="email"
                  name="contact[email]"
                  placeholder="Your email"
                  aria-label="Email address"
                  required
                  class="footer-redesign__input"
                >
                <button type="submit" class="footer-redesign__submit" aria-label="Subscribe">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14"/>
                    <path d="m12 5 7 7-7 7"/>
                  </svg>
                </button>
              </div>
              {% if form.posted_successfully? %}
                <p class="footer-redesign__success">Thanks for subscribing!</p>
              {% endif %}
              {% if form.errors %}
                <p class="footer-redesign__error">{{ form.errors | default_errors }}</p>
              {% endif %}
            {% endform %}
          </div>

          {% comment %} Social Icons {% endcomment %}
          <div class="footer-redesign__social">
            {% assign socialNetworks = 'instagram|tiktok|facebook|youtube' | split: '|' %}
            <ul class="footer-redesign__social-list">
              {% for network in socialNetworks %}
                {% capture setting %}social{{ network | capitalize }}{% endcapture %}
                {% if settings[setting] != blank %}
                  <li>
                    <a href="{{ settings[setting] }}" aria-label="{{ network }}" class="footer-redesign__social-link">
                      {% case network %}
                        {% when 'instagram' %}
                          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
                        {% when 'tiktok' %}
                          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"/></svg>
                        {% when 'facebook' %}
                          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
                        {% when 'youtube' %}
                          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17"/><path d="m10 15 5-3-5-3z"/></svg>
                      {% endcase %}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>

  {% comment %} HUED REDESIGN: Footer Bottom Bar {% endcomment %}
  <div class="footer-redesign__bottom">
    <div class="footer-redesign__container">
      <div class="footer-redesign__copyright">
        &copy; {{ "now" | date: "%Y" }} {{ shop.name }}
        <span class="footer-redesign__powered">Powered by Shopify</span>
      </div>

      <div class="footer-redesign__bottom-right">
        {% render 'localization-form', showCurrencySelector: section.settings.showCurrencySelector, showLanguageSelector: section.settings.showLanguageSelector %}
      </div>
    </div>
  </div>

</footer>

<style>
  .footer-logo__link {
    display: inline-block;
  }
  .footer-logo__image {
    display: block;
    height: auto;
    max-width: 100%;
  }
</style>

