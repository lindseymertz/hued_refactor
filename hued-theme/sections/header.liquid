    <div class="header-tools header-tools--style-{{ section.settings.icon_style }}" data-header-tools>
      <ul>
        {% comment %} Search Icon - Lucide {% endcomment %}
        <li class="header-search-icon">
          <button type="button" class="header-search-toggle" aria-label="{{ 'layout.header.search' | t | escape }}" data-search-drawer-toggle>
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.34-4.34"/></svg>
