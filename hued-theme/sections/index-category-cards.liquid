{{ 'section-category-cards.css' | asset_url | stylesheet_tag }}

<div class="category-cards-section">
  <div class="category-cards-container">
    {% if section.settings.heading != blank %}
      <div class="category-cards-header">
        <h2 class="category-cards-title">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="category-cards-wrapper">
      <div class="category-cards-scroll">
        {% for block in section.blocks %}
          <a href="{{ block.settings.link }}" class="category-card" {{ block.shopify_attributes }}>
            <div class="category-card-image" {% if block.settings.image == blank %}style="background-color: {{ block.settings.placeholder_color }};"{% endif %}>
              {% if block.settings.image %}
                <img
                  src="{{ block.settings.image | image_url: width: 400 }}"
                  srcset="{{ block.settings.image | image_url: width: 200 }} 200w,
                          {{ block.settings.image | image_url: width: 400 }} 400w,
                          {{ block.settings.image | image_url: width: 600 }} 600w"
                  sizes="(max-width: 400px) 70vw, (max-width: 600px) 50vw, (max-width: 900px) 33vw, 25vw"
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                  width="400"
                  height="400"
                >
              {% endif %}
            </div>
            <div class="category-card-label">
              <span>{{ block.settings.title }}</span>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Category Cards",
  "tag": "section",
  "class": "index-category-cards",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Category"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Square image recommended (400x400px)"
        },
        {
          "type": "color",
          "id": "placeholder_color",
          "label": "Placeholder Color",
          "default": "#27bdbe",
          "info": "Used when no image is set"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Cards",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Jelly Bracelets",
            "link": "/collections/jelly-bracelets",
            "placeholder_color": "#27bdbe"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Jelly Rings",
            "link": "/collections/jelly-rings",
            "placeholder_color": "#FF6B6B"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Twist Bracelets",
            "link": "/collections/twist-bracelets",
            "placeholder_color": "#9B59B6"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Beaded Bracelets",
            "link": "/collections/beaded-bracelets",
            "placeholder_color": "#F39C12"
          }
        }
      ]
    }
  ]
}
{% endschema %}
